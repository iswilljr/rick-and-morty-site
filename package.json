{
  "name": "rick-and-morty-site",
  "version": "0.0.1",
  "license": "MIT",
  "description": "The Rick and Morty API is a REST API based on the television show Rick and Morty",
  "private": true,
  "scripts": {
    "astro": "astro",
    "build": "astro build",
    "dev": "astro dev",
    "format": "prettier --write .",
    "format.check": "prettier --check .",
    "get-random-characters": "node scripts/get-random-characters.js",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx,astro}\"",
    "preview": "astro build --config adapters/node/astro.config.mjs && astro preview --config adapters/node/astro.config.mjs",
    "start": "astro dev",
    "test.e2e": "playwright test"
  },
  "dependencies": {
    "@astrojs/mdx": "2.0.3",
    "@astrojs/node": "7.0.4",
    "@astrojs/rss": "4.0.1",
    "@astrojs/sitemap": "3.0.4",
    "@astrojs/tailwind": "5.1.0",
    "@astrojs/vercel": "6.1.3",
    "astro": "4.16.1",
    "astrojs-service-worker": "2.0.0",
    "clsx": "2.1.0"
  },
  "devDependencies": {
    "@playwright/test": "1.40.1",
    "@tailwindcss/typography": "0.5.10",
    "@types/eslint": "8.56.1",
    "@types/node": "20.10.6",
    "autoprefixer": "10.4.16",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-standard-with-typescript": "43.0.0",
    "eslint-plugin-astro": "0.31.0",
    "eslint-plugin-prettier": "5.1.2",
    "postcss": "8.4.33",
    "prettier": "3.1.1",
    "prettier-plugin-astro": "0.12.3",
    "prettier-plugin-tailwindcss": "0.5.11",
    "prism-themes": "1.9.0",
    "tailwindcss": "3.4.1",
    "typescript": "5.3.3"
  }
}
