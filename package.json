{
  "name": "rick-and-morty-api-site",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/tailwind.css",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/tailwind.css",
    "get-random-characters": "esno ./app/services/get-random-characters.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@remix-run/node": "1.14.1",
    "@remix-run/react": "1.14.1",
    "@remix-run/vercel": "1.14.1",
    "@vercel/node": "2.9.12",
    "clsx": "1.2.1",
    "prism-themes": "1.9.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "redaxios": "0.5.1"
  },
  "devDependencies": {
    "@playwright/test": "1.31.2",
    "@remix-run/dev": "1.14.1",
    "@remix-run/serve": "1.14.1",
    "@tailwindcss/typography": "0.5.9",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "autoprefixer": "10.4.14",
    "concurrently": "7.6.0",
    "esno": "0.16.3",
    "postcss": "8.4.21",
    "rehype-prism-plus": "1.5.1",
    "remark-gfm": "3.0.1",
    "tailwindcss": "3.2.7",
    "typescript": "4.9.5"
  }
}
